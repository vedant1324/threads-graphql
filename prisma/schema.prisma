generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  firstName String @map("first_name")
  lastName String @map("last_Name")
  email String @unique
  password String
  ProfileImageURL String? @map("profile_image_url")
  salt String 

  @@map("users")
}
